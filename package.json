{
  "name": "@wx-code-pro/monorepo",
  "version": "1.0.0",
  "description": "小程序打包器",
  "main": "index.js",
  "scripts": {
    "lint-staged": "lint-staged",
    "prepare": "husky install",

    "clean": "rimraf --glob **/node_modules",
    "dev": "pnpm -C ./playground dev",

    "build:packages": "pnpm build:cli-service && pnpm build:copy-loader && pnpm build:inject-chunk",
    "build:cli-service": "pnpm -C ./packages/cli-service build",
    "build:copy-loader": "pnpm -C ./packages/copy-loader build",
    "build:inject-chunk": "pnpm -C ./packages/inject-chunk-webpack-plugin build"
  },
  "author": "WHB",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-wxml": "^0.7.5",
    "husky": "^7.0.4",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [  
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"  
    }
  }
}
